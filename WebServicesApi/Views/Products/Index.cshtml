@model IEnumerable<WebServicesApi.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="form-group">
    <a class="btn btn-warning" href="@Url.Action("Create","Products")">Cadastrar Produto</a>
    <a class="btn btn-primary" href="@Url.Action("Create","Categories")">Cadastrar Categoria</a>
    <a class="btn btn-success" href="@Url.Action("Index","Categories")">Consultar Categorias</a>
</div>

<table class="table table-responsive">
    <tr>
        <th>
            <h4><b>Categoria</b></h4>
        </th>
        <th>
            <h4><b>Produto</b></h4>
        </th>
        <th>
            <h4><b>Preço</b></h4>
        </th>
        <th>
            <h4><b>Data da compra</b></h4>
        </th>
        <th>
            <h4><b>Produto disponível</b></h4>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AcquireDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>